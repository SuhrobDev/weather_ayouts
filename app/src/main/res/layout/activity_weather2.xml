<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rim_bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/menu"
        android:id="@+id/menu_icon"
        />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="92dp"
        android:text="@string/tashkent"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/menu_icon"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="@string/_10_31_am"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/city"
        app:layout_constraintStart_toStartOf="@id/city"
        app:layout_constraintTop_toBottomOf="@id/city" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloud_queue"
        app:layout_constraintBottom_toTopOf="@id/up_num"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@id/num"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="@id/num" />

    <TextView
        android:id="@+id/type_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cloudy"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/cloud"
        app:layout_constraintBottom_toBottomOf="@id/cloud"
        android:layout_marginStart="4sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/cloud" />

    <ImageView
        android:id="@+id/upward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_upward"
        app:layout_constraintBottom_toTopOf="@+id/num"
        app:layout_constraintEnd_toEndOf="@id/num"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/num"
        app:layout_constraintTop_toBottomOf="@id/cloud"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/up_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_15"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/up_circle"
        app:layout_constraintBottom_toBottomOf="@id/upward"
        app:layout_constraintStart_toEndOf="@id/upward"
        app:layout_constraintTop_toTopOf="@id/upward"
        app:layout_constraintVertical_bias="0.0" />
    <ImageView
        android:id="@+id/up_circle"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:src="@drawable/circyle_png"
        app:layout_constraintStart_toEndOf="@id/up_num"
        app:layout_constraintEnd_toStartOf="@id/down"
        app:layout_constraintTop_toTopOf="@id/up_num" />
    <ImageView
        android:id="@+id/down"
        android:src="@drawable/arrow_downward"
        app:layout_constraintTop_toTopOf="@id/up_num"
        app:layout_constraintBottom_toBottomOf="@id/up_num"
        app:layout_constraintStart_toEndOf="@id/up_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.0"/>
    <TextView
        android:id="@+id/down_num"
        android:text="@string/_12"
        app:layout_constraintStart_toEndOf="@id/down"
        app:layout_constraintBottom_toBottomOf="@id/down"
        app:layout_constraintTop_toTopOf="@id/down"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:src="@drawable/circyle_png"
        app:layout_constraintStart_toEndOf="@id/down_num"
        app:layout_constraintTop_toTopOf="@id/down_num"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/num"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15sp"
        android:layout_marginBottom="10sp"
        android:text="@string/_13"
        android:textColor="@color/white"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/circyle_png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/num" />

</androidx.constraintlayout.widget.ConstraintLayout>